<body>
    <section class="section">
        <div class="container">
            <h1 class="title">URL Raccourcie avec QR Code</h1>
            <div class="box">
                <p><strong>URL originale :</strong> <a href="<%= originalUrl %>" target="_blank"><%= originalUrl %></a></p>
                <p><strong>URL raccourcie :</strong> <a href="<%= shortUrl %>" target="_blank"><%= shortUrl %></a></p>
                <div class="qr-code">
                    <img src="<%= qrCodeUrl %>" alt="QR Code">
                </div>
            </div>
            <div class="field">
                <div class="control">
                    <a class="button is-link" href="/">Raccourcir une autre URL</a>
                </div>
            </div>
        </div>
    </section>
</body>
